<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>	
  		<record id="res_config_settings_view_form_hr_attendance" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.hr.attendance</field>
            <field name="model">res.config.settings</field>
			<field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>			
			<field name="arch" type="xml">	
            <block name="overtime_settings" position="after">
                <block title="Geofence" id="hr_attendance_geofence">
                    <div id="hr_attendance_geofence_settings" class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="attendance_geofence" readonly="False"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="attendance_geofence" string="Enable Geofence"/>
                            <div class="text-muted">
                                Enable to Capture the Geofence while using the attendance
                            </div>
                        </div>
                    </div>
                    </block>
                </block>				
			</field>
		</record>
	</data>		
</odoo>